#include "str_easu.h"

string itc_cmp_str(string str1, string str2, int num) {
    string answer = "";
    for (int i = 0; i < num; i++)
        answer += str1[i];
    for (int i = 0; str2[i] != '\0'; i++)
        answer += str2[i];
    for (int i = num; str1[i] != '\0'; i++)
        answer += str1[i];
    return answer;
}


int itc_find_str(string str1, string str2) {
    if (itc_len(str2) > itc_len(str1))
        return -1;
    else {
        int answer = 1;
        for (int i = 0; i < itc_len(str1); i++) {
            if (str1[i] == str2[0]) {
                for (int j = 1; j < itc_len(str2); j++) {
                    if (str2[j] == str1[i + j])
                        answer++;
                    else {
                        answer = 1; return -1;
                    }
                }
                if (answer == itc_len(str2))
                    return i;
            }
        }
    }
}


string itc_three_str(string str1, string str2, string str3) {
    int counter;
    while (itc_find_str(str1, str2) != -1) {
        string ans1;
        string ans2;
        counter = itc_find_str(str1, str2);
        for (int i = 0; i < counter; i++)
            ans1 += str1[i];
        for (int i = counter + itc_len(str2); str1[i] != '\0'; i++)
            ans2 += str1[i];

        str1 = ans1 + str3 + ans2;
    }
    return str1;
}


int itc_max_char_on_end(string str)
{
    int counter = 0;
    int result = 0;
    for (int i = 0; i < itc_len(str); i++) {
        if (str[i] >= '0' && str[i] <= '9') {
            counter++;
        }
        else {
            counter = 0;
        }
        if (counter > result)
            result = counter;
    }
    return result;
}
